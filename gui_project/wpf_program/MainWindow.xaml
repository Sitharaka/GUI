<Window x:Class="wpf_program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_program"
        mc:Ignorable="d"
        Title="Weekly Task Manager" Height="700" Width="1650">
    <Grid Margin = "5">
        <Grid.RowDefinitions>
            <RowDefinition Height = "140"/>
            <RowDefinition Height = "560"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*">
                <ColumnDefinition Width="1*">    
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Button Name="addButtonOne" Height="*">Add task</Button>
                <Button Name="removeButtonOne" Height="*">Remove task</Button>
            </StackPanel>  

            <TextBlock Grid.Column="0" 
                Text="WEEKLY TASK MANAGER"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"/>      
        </Grid>

        <Grid Grid.Row="1">

        </Grid>


    </Grid>
</Window>
